{% extends "layouts/base.twig" %}

{% block content %}
	<div class="row justify-content-center">
		<div class="col-md-6">
			<div class="card">
				<div class="card-body">
					<h1 class="card-title text-center">Login</h1>
					{% if errors.general %}
						<div class="alert alert-danger">{{ errors.general }}</div>
					{% endif %}
					<form action="/login" method="post" novalidate>
						<input type="hidden" name="csrf_token" value="{{ csrf_token }}">
						<div class="mb-3">
							<label for="email" class="form-label">Email address</label>
							<input type="email" class="form-control {{ errors.email ? 'is-invalid' : '' }}" id="email" name="email" value="{{ old.email ?? '' }}" required>
							{% if errors.email %}
								<div class="invalid-feedback">{{ errors.email }}</div>
							{% endif %}
						</div>
						<div class="mb-3">
							<label for="password" class="form-label">Password</label>
							<input type="password" class="form-control {{ errors.password ? 'is-invalid' : '' }}" id="password" name="password" required>
							{% if errors.password %}
								<div class="invalid-feedback">{{ errors.password }}</div>
							{% endif %}
						</div>
                        <div class="justify-content-md-center d-flex">
						<button type="submit" class="btn btn-primary w-30">Login</button>
                        </div>
					</form>
				</div>
			</div>
		</div>
	</div>
{% endblock %}

{% block scripts %}
	<script>// Add any JavaScript needed for the login page here</script>{% endblock %}
